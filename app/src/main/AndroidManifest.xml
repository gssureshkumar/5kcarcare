<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.carcare">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name=".app.CarCareApplication"
        android:allowBackup="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.5KCarCare"
        tools:targetApi="31">
        <activity
            android:name=".ui.splash.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.5KCarCare.NoActionBar"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="firebase_crashlytics_collection_enabled"
            android:value="${crashlyticsCollectionEnabled}" />

        <meta-data
            android:name="firebase_performance_logcat_enabled"
            android:value="${crashlyticsCollectionEnabled}" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustNothing"
            android:theme="@style/Theme.5KCarCare.NoActionBar" />

        <activity
            android:name=".ui.setaddress.MapsActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustNothing"
            android:theme="@style/Theme.5KCarCare.NoActionBar" />
        <activity
            android:name=".ui.authentication.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.5KCarCare.NoActionBar" />

        <activity
            android:name=".ui.serviceDetails.ServiceDetailsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.5KCarCare.NoActionBar" />

        <activity
            android:name=".ui.bookingDetails.BookingDetailsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.5KCarCare.NoActionBar" />

        <activity
            android:name=".ui.cart.CartListActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.5KCarCare.NoActionBar" />

        <activity
            android:name=".ui.checkout.CheckOutActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.5KCarCare.NoActionBar" />

        <activity
            android:name=".ui.checkout.PaymentMethodActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.5KCarCare.NoActionBar" />

        <activity
            android:name=".ui.checkout.VouchersActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.5KCarCare.NoActionBar" />

        <service
            android:name=".utils.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

    </application>

    <queries>
        <package android:name="com.google.android.apps.nbu.paisa.user" />
        <package android:name="com.phonepe.app"/>
        <package android:name="in.amazon.mShop.android.shopping"/>
        <package android:name="net.one97.paytm"/>
        <package android:name="com.paytmmall"/>
        <package android:name="in.org.npci.upiapp"/>
        <intent>
            <action android:name="android.intent.action.SEND" />
        </intent>
    </queries>
</manifest>