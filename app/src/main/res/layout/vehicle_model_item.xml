<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/vehicleView"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/carModelIcon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:padding="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/deleteIcon"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/carModelIcon"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/carModelName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/opensans_bold"
            android:text="@string/sedan"
            android:textSize="16sp" />

            <TextView
                android:id="@+id/primaryMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/opensans_regular"
                android:textAllCaps="true"
                android:visibility="gone"
                android:layout_marginStart="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:background="@drawable/button_selector"
                android:text="@string/primary"
                android:textSize="16sp" />
    </LinearLayout>

        <TextView
            android:id="@+id/registrationNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/opensans_regular"
            android:text="@string/sedan"
            android:textSize="16sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/deleteIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_delete_forever_icon" />
</RelativeLayout>