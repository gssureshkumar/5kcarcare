<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/jobStatusTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/opensans_semibold"
            android:text="@string/total_amount"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:drawablePadding="5dp"
            app:drawableStartCompat="@drawable/ic_red_circle_icon" />

        <TextView
            android:id="@+id/jobDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_gray"
            android:ellipsize="marquee"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/jobStatusTxt"
            android:fontFamily="@font/opensans_regular"
            android:text="150"
            android:textSize="16sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/jobBookingStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_gray"
        android:ellipsize="marquee"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/opensans_regular"
        android:text="150"
        android:textSize="16sp" />


    <RelativeLayout
        android:id="@+id/driverView"
        android:layout_width="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/personIcon"
            android:layout_width="50dp"
            android:background="@drawable/draw_white_circle_gray_corner_view"
            android:layout_height="50dp"
            android:padding="5dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_person_icon"/>

        <TextView
            android:id="@+id/serviceUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark"
            android:layout_toEndOf="@+id/personIcon"
            android:ellipsize="marquee"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/opensans_regular"
            android:text="150"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/serviceUserNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4083F6"
            android:layout_toEndOf="@+id/personIcon"
            android:autoLink="phone"
            android:layout_below="@+id/serviceUserName"
            android:ellipsize="marquee"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/opensans_regular"
            android:text="150"
            android:textSize="16sp" />

    </RelativeLayout>

</LinearLayout>