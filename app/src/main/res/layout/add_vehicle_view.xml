<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/selectVehicleType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginEnd="10dp"
        android:padding="5dp"
        android:layout_marginStart="10dp"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:fontFamily="@font/opensans_bold"
        android:text="@string/select_vehicle_type"
        android:textSize="16sp"
        app:drawableEndCompat="@drawable/ic_close_icon" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="5dp"
        android:background="@color/line_color" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:id="@+id/progressBar" />

    <LinearLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/vehicleContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:scrollbars="none"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/hatchBackContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/hatchIcon"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:padding="10dp"
                            android:background="@drawable/draw_white_circle_gray_corner_view"
                            android:src="@drawable/ic_hatch_back_icon" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="10dp"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/opensans_bold"
                            android:text="@string/hatch_back"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/sedanContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/sedanIcon"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:padding="10dp"
                            android:background="@drawable/draw_white_circle_gray_corner_view"
                            android:src="@drawable/ic_sedan_back_icon" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="10dp"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/opensans_bold"
                            android:text="@string/sedan"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/suvContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/suvIcon"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:padding="10dp"
                            android:background="@drawable/draw_white_circle_gray_corner_view"
                            android:src="@drawable/ic_suv_back_icon" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="10dp"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/opensans_bold"
                            android:text="@string/suv"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/muvContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/muvIcon"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:padding="10dp"
                            android:background="@drawable/draw_white_circle_gray_corner_view"
                            android:src="@drawable/ic_7_rect_seaters_icon" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="10dp"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/opensans_bold"
                            android:text="@string/muv"
                            android:textSize="16sp" />
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="20dp"
                android:padding="5dp"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/opensans_bold"
                android:text="@string/model_name"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="5dp"
                android:background="@color/line_color" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/carModelTxt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fontFamily="@font/opensans_medium"
                android:inputType="textCapSentences"
                android:maxLines="1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:hint="@string/car_model"
                android:background="@drawable/draw_rounded_gray_corner_view"
                android:textColor="@color/black"
                android:textColorHint="@color/hint_text_color" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="20dp"
                android:padding="5dp"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/opensans_bold"
                android:text="@string/registration"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="5dp"
                android:background="@color/line_color" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/registrationEdt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fontFamily="@font/opensans_medium"
                android:inputType="textCapCharacters"
                android:maxLines="1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:hint="@string/registration_hint"
                android:background="@drawable/draw_rounded_gray_corner_view"
                android:textColor="@color/black"
                android:textColorHint="@color/hint_text_color" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/button_selector"
                android:enabled="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/opensans_bold"
                android:text="@string/save"
                android:textSize="18sp"
                android:textColor="@color/white"
                app:backgroundTint="@color/splash_background"
                app:cornerRadius="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/vehicleListContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/vehicleList" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="5dp"
                android:background="@color/line_color" />

            <TextView
                android:id="@+id/addVehicleType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginEnd="10dp"
                android:padding="10dp"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/opensans_regular"
                android:text="@string/add_new_car"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>